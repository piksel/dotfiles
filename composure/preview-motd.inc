preview-motd ()
{
    author 'Nils Måsén'
    about 'Preview MOTD as generated by update-motd'
    param '[-q] Quiet, skip file name output'
    example 'preview-motd -q'
    group 'utils'

    for f in /etc/update-motd.d/*
    do
        if [[ "$1" != "-q" ]]; then
            echo -e "\e[37m--- $f ---\e[39m"
        fi
        sudo bash $f
    done
}
